#include <stdio.h>
int factorial(int n);
 
    int main() {
    int n, i;
    double e = 1.0;  

    printf("請輸入 n：");
    scanf_s("%d", &n);

    for (i = 1; i <= n; i++) {
        e = e + 1.0 / factorial(i);
    }

    printf("e 的近似值 = %f\n", e);

    return 0;
}
    int factorial(int n) {
    if (n == 0 || n == 1) {
        return 1;
    }
    else {
        return n * factorial(n - 1);
    }
}


