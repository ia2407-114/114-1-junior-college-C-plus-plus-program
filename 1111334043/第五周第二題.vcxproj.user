#include <stdio.h>

int main() {
    int fact, n;

    printf("請輸入一個整數 fact (<13)：");
    scanf_s("%d", &fact);

   
    int f = 1;
    for (int i = 1; i <= fact; i++) {
        f *= i;
    }
    printf("%d! = %d\n", fact, f);

    printf("請輸入項目數量 n (<13)：");
    scanf_s("%d", &n);

   
    double e = 1.0;      
    double temp = 1.0;  
    for (int i = 1; i <= n; i++) {
        temp *= i;       
        e += 1.0 / temp;  
    }

    printf("當 n = %d 時，e 的近似值為：%lf\n", n, e);

    return 0;
}
