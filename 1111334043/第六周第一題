#include <stdio.h>

int main() {
    double p, r, aims;   
    int year = 0;       
    
    printf("請輸入本金 p: ");
    scanf_s("%lf", &p);
    printf("請輸入年利率 r (例如 0.05 代表 5%%): ");
    scanf_s("%lf", &r);
    printf("請輸入存款目標 aims: ");
    scanf_s("%lf", &aims);

    while (p < aims) 
{
        p = p * (1 + r);
        year++;
        printf("第 %d 年年底，本利合為: %.2lf\n", year, p);
    }

    printf("達成目標需 %d 年。\n", year);

    return 0;
}
