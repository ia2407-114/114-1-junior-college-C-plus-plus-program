#include <stdio.h>
double power(double x, int n);
int factorial(int n) {
    if (n == 0) {
        return 1;     
    }
    if (n == 1) {
        return 1;    
    }
    return n * factorial(n - 1);
}

int main() {
    int n, i;
    double x;
    double result = 1.0;   

    printf("請輸入 n：");
    scanf_s("%d", &n);

    printf("請輸入 x：");
    scanf_s("%lf", &x);

    for (i = 1; i <= n; i++) {
        result = result + power(x, i) / factorial(i);
    }

    printf("e^x 的近似值 = %f\n", result);

    return 0;
}
double power(double x, int n) {
    if (n == 0) {
        return 1;    
    }
    return x * power(x, n - 1);
}
