#include <stdio.h>

int main() {
    float weight;
    int fee;

    printf("請輸入包裹重量（公斤）：");
    scanf_s("%f", &weight);

    if (weight <= 2.0) {
        fee = 50;
    }
    else {
        fee = 50 + (int)(weight - 2) * 30;
    }

    printf("包裹重量為 %.2f 公斤，運費為 %d 元。\n", weight, fee);

    return 0;
}
