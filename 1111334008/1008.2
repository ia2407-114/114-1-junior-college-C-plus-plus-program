#include <stdio.h>

int main() {
    float weight, height, bmi;

    // 讀取使用者輸入
    printf("請輸入體重（公斤）：");
    scanf_s("%f", &weight);
    printf("請輸入身高（公尺）：");
    scanf_s("%f", &height);

    // 計算 BMI
    bmi = weight / (height * height);

    // 顯示 BMI 數值
    printf("您的 BMI 為：%.2f\n", bmi);

    // 判斷 BMI 等級（每個 if 只有一個條件式）
    if (bmi < 18.5)
        printf("體重過輕。\n");
    else if (bmi < 25)
        printf("正常範圍。\n");
    else if (bmi < 30)
        printf("過重。\n");
    else if (bmi < 35)
        printf("輕度肥胖。\n");
    else if (bmi < 40)
        printf("中度肥胖。\n");
    else
        printf("重度肥胖。\n");

    return 0;
}
