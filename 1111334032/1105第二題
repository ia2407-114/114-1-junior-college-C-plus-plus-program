#include <stdio.h>
int yearly(double p, double r, double d, double aim);


int main(void) {
	double p, r, aim, d;
	int y = 0;
	printf("請輸入本金(10000):\n");
	scanf_s("%lf", &p);
	printf("請輸入年利率(0.05):\n");
	scanf_s("%lf", &r);
	printf("請輸入每年定存金額:\n");
	scanf_s("%lf", &d);
	printf("請輸入想存到的金額:\n");
	scanf_s("%lf", &aim);
	printf("需要 %d 年才能達成目標。\n", yearly(p,r,d,aim));
	return 0;
}
int yearly(double p, double r, double d, double aim) {
	int years = 0;
	while (p < aim) {
		p = p * (1 + r); 
		p += d;          
		years++;
	}

	return years;
}
