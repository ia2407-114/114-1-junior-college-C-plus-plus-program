#include <stdio.h>
double ball(double, double);
double pi(int n);
double bs(double, double);
double cv(double, double,double);
double cs(double, double, double);
double c(double, double);
double a(double, double);



double pi(int n);
int main()
{
    int n;
	double r,h;
	printf("請輸入球的半徑");
	scanf_s("%lf",&r);
    printf("請輸入球的高度");
    scanf_s("%lf", &h);
    printf("輸入項目總數量");
    scanf_s("%d" ,& n);
    printf("球的體積為%lf\n",ball(pi(n),r));
    printf("球的表面積為%lf\n", bs(pi(n),r));
    printf("圓柱體體積為%lf\n", cv(pi(n),r,h));
    printf("圓柱體表面積為%lf\n", cs(pi(n), r, h));
    printf("圓周長為%lf\n", c(pi(n), r));
    printf("圓面積為%lf\n", a(pi(n), r));
    printf("pi的近似值%lf", pi(n));
	return 0;
}
double ball(double pi, double r) {
    return (4.0 / 3) * pi * r * r * r;
}
double bs(double pi, double r) {
    return (4.0) * pi * r * r;
}
double cv(double pi, double r, double h) {
    return pi * r * r * h;
}
double cs(double pi, double r, double h) {
    return (2.0) * pi * r * r + 2.0 * pi * r * h;
}
double c(double pi, double r) {
    return 2.0 * pi * r;
}
double a(double pi, double r) {
    return pi * r * r;
}


double pi(int n) {
    int i;
    double pi_approx = 0.0;
    double sign = 1.0;

    for (i = 0; i < n; i++) {
        double denominator = 2.0 * i + 1.0;
        pi_approx += sign * (4.0 / denominator);
        sign *= -1.0;
    }

    return pi_approx;
}
