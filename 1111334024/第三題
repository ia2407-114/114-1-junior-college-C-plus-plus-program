#include <stdio.h>
//第三題
int main(void) {
    int a, b, c, d;  
    int t;            

    printf("請輸入四個整數:\n");
    scanf_s("%d", &a);
    scanf_s("%d", &b);
    scanf_s("%d", &c);
    scanf_s("%d", &d);

 
    if (a < b) { t = a; a = b; b = t; }
    if (a < c) { t = a; a = c; c = t; }
    if (a < d) { t = a; a = d; d = t; }
    if (b < c) { t = b; b = c; c = t; }
    if (b < d) { t = b; b = d; d = t; }
    if (c < d) { t = c; c = d; d = t; }

    printf("由大到小排序結果: %d %d %d %d\n", a, b, c, d);

    return 0;
}
