#include <stdio.h>
//第二題
int main(void) {
    double weight, height;  
    double bmi;

    printf("請輸入體重(公斤): ");
    if 
        (scanf_s("%lf", &weight) != 1) {
        printf("輸入格式錯誤：體重。\n");
        return 0;
    }

    printf("請輸入身高(幾公分): ");
    if 
        (scanf_s("%lf", &height) != 1) {
        printf("輸入格式錯誤：身高。\n");
        return 0;
    }

    if 
        (height > 10.0) {
        height = height / 100.0;
    }

    bmi = weight / (height * height);

    printf("換算後身高: %.2f\n", height);
    printf("您的 BMI 為: %.2f\n", bmi);

    if 
        (bmi < 18.5) {
        printf("體重過輕\n");
    }
    else if (bmi < 24) {
        printf("正常範圍\n");
    }
    else if (bmi < 27) {
        printf("過重\n");
    }
    else if (bmi < 30) {
        printf("輕度肥胖\n");
    }
    else if (bmi < 35) {
        printf("中度肥胖\n");
    }
    else {
        printf("重度肥胖\n");
    }

    return 0;
}
