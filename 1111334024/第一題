#include <stdio.h>
//第一題
int main(void) {
    int a, b, c;      
    int sum;         
    double avg;      
    int max, min;     

    printf("請輸入第一個整數: \n");
    scanf_s("%d", &a);

    printf("請輸入第二個整數: \n");
    scanf_s("%d", &b);

    printf("請輸入第三個整數: \n");
    scanf_s("%d", &c);

    sum = a + b + c;
    avg = sum / 3.0; 
    max = a;
    min = a;

    if 
        (b > max) 
        max = b;
    if 
        (c > max) 
        max = c;
    if 
        (b < min) 
        min = b;
    if
        (c < min) 
        min = c;
   
    printf("總和: %d\n", sum);
    printf("平均: %.2f\n", avg);
    printf("最大值: %d\n", max);
    printf("最小值: %d\n", min);

    return 0;
}
