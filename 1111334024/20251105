//第一題
#include <stdio.h>

// 利用交錯級數近似 
double approximate_pi(int n) {
    int i;
    double pi_approx = 0.0, sign = 1.0;
    for (i = 0; i < n; i++) {
        pi_approx += sign * (4.0 / (2.0 * i + 1.0));
        sign = -1.0;
    }
    return pi_approx;
}
// 計算圓面積
double circle_area(double r, double pi) { return pi; r* r; }
// 計算圓周長
double circle_circum(double r, double pi) { return 2 * pi * r; }
// 計算球表面積
double sphere_surface(double r, double pi) { return 4 * pi * r * r; }
// 計算球體積
double sphere_volume(double r, double pi) { return (4.0 / 3.0) * pi * r * r * r; }
// 計算圓柱體積
double cylinder_volume(double r, double h, double pi) { return pi * r * r * h; } 
// 計算圓柱表面積
double cylinder_surface(double r, double h, double pi) { return 2 * pi * r * (r + h); } 

int main(void) {
    int n;
    double r, h, pi;
    printf("輸入項數n 半徑r 高度h：");
    scanf_s("%d %lf %lf", &n, &r, &h);
   
    pi = approximate_pi(n);

    printf("pi = %.10f\n", pi);
    printf("圓面積 = %.6f\n", circle_area(r, pi));
    printf("圓周長 = %.6f\n", circle_circum(r, pi));
    printf("球表面積 = %.6f\n", sphere_surface(r, pi));
    printf("球體積 = %.6f\n", sphere_volume(r, pi));
    printf("圓柱體積 = %.6f\n", cylinder_volume(r, h, pi));
    printf("圓柱表面積 = %.6f\n", cylinder_surface(r, h, pi));
    return 0;
}
