#include <stdio.h>
#define SIZE 20

int main() {
    int id[SIZE] = { 12,13,14,15,16,17,19,21,22,23,24,26,27,28,29,31,32,33,36,37 };
    int score[SIZE] = { 66,67,66,70,73,74,75,75,62,32,44,46,27,12,80,63,66,90,11,66 };
    printf("排序前學號與成績 (由小到大):\n");
    for (int i = 0; i < SIZE; i++) {
        printf("學號: %2d  成績: %2d\n", id[i], score[i]);
    }
    for (int i = 0; i < SIZE - 1; i++) {
        for (int j = 0; j < SIZE - 1 - i; j++) {
            if (score[j] > score[j + 1]) {
                int temp1 = score[j];
                score[j] = score[j + 1];
                score[j + 1] = temp1;

                int temp2 = id[j];
                id[j] = id[j + 1];
                id[j + 1] = temp2;
            }
        }
    }
    printf("排序後學號與成績 (由小到大):\n");
    for (int i = 0; i < SIZE; i++) {
        printf("學號: %2d  成績: %2d\n", id[i], score[i]);
    }

    return 0;
}
