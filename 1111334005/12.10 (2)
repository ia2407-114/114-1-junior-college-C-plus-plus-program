#include <stdio.h>
#define SIZE 20

void bubbleSort(int id[], int score[], int length);

int main(void)
{
    int id[SIZE] = { 12,13,14,15,16,17,19,21,22,23,24,26,27,28,29,31,32,33,36,37 };
    int score[SIZE] = { 66,67,66,70,73,74,75,75,62,32,44,46,27,12,80,63,66,90,11,66 };

    printf("原始資料(學號, 成績):\n");
    for (int i = 0; i < SIZE; i++) {
        printf("ID:%2d  Score:%2d\n", id[i], score[i]);
    }


    bubbleSort(id, score, SIZE);

    printf("\n排序後資料(依成績由小到大):\n");
    for (int i = 0; i < SIZE; i++) {
        printf("ID:%2d  Score:%2d\n", id[i], score[i]);
    }

    return 0;
}

void bubbleSort(int id[], int score[], int length)
{
    int i, pass, tempID, tempScore;

    for (pass = 0; pass < length - 1; pass++) {
        for (i = 0; i < length - 1 - pass; i++) {

            
            if (score[i] > score[i + 1]) {

                tempScore = score[i];
                score[i] = score[i + 1];
                score[i + 1] = tempScore;

                tempID = id[i];
                id[i] = id[i + 1];
                id[i + 1] = tempID;
            }
        }
    }
}
