#include <stdio.h>
#define max 15

// 遞迴計算 x^n
double power(double x, int n) {
    if (n == 0)
        return 1;
    else
        return x * power(x, n - 1);
}

// 遞迴計算 n!
long long fact(int n) {
    if (n == 0)
        return 1;
    else
        return n * fact(n - 1);
}

int main() {
    int n, i;
    double x;
    double ex = 1.0;  // 第一項為 1
    int terms[max];   // 題目要求：整數陣列

    printf("請輸入 n (n < %d): ", max);
    scanf_s("%d", &n);

    if (n >= max) {
        printf("n 超過陣列容量!\n");
        return 0;
    }

    printf("請輸入 x: ");
    scanf_s("%lf", &x);

    // 第 0 項（1）存入陣列
    terms[0] = 1;

    // 計算級數項目
    for (i = 1; i <= n; i++) {
        double term = power(x, i) / fact(i);  // x^i / i!
        ex += term;

        terms[i] = (int)(term + 0.5);  // 題目陣列是 int → 四捨五入
    }

    // === 顯示每一項 ===
    printf("\n級數每一項（四捨五入後存入陣列 terms[]）：\n");
    for (i = 0; i <= n; i++) {
        printf("terms[%d] = %d\n", i, terms[i]);
    }

    // === 顯示 e^x 結果 ===
    printf("\ne^x 的近似值 = %lf\n", ex);

    return 0;
}
