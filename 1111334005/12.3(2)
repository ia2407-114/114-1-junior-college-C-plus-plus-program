#include <stdio.h>

// 遞迴計算 x^n
double power(double x, int n) {
    if (n == 0)
        return 1;
    else
        return x * power(x, n - 1);
}

// 遞迴計算 n!
long long fact(int n) {
    if (n == 0)
        return 1;
    else
        return n * fact(n - 1);
}

int main() {
    int n;
    double x;
    double result = 1.0;  // 從 1 開始 (對應級數中的第一項)

    printf("請輸入 n: ");
    scanf_s("%d", &n);

    printf("請輸入 x: ");
    scanf_s("%lf", &x);

    for (int i = 1; i <= n; i++) {
        result += power(x, i) / fact(i);
    }

    printf("e^x 的近似值 = %lf\n", result);

    return 0;
}
