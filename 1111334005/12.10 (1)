#include <stdio.h>
#define SIZE 20   // 問卷份數

int main(void)
{
    int n[SIZE];       // 用來存問卷結果
    int i, j;

    // 讓使用者輸入 20 份問卷結果
    printf("請輸入 %d 份問卷結果(整數)：\n", SIZE);
    for (i = 0; i < SIZE; i++) {
        printf("第 %2d 份：", i + 1);
        scanf_s("%d", &n[i]);
    }

    // 列印表頭
    printf("\n%s%13s%17s\n", "Element", "Value", "Histogram");

    // 輸出每一份問卷的柱狀圖
    for (i = 0; i < SIZE; ++i) {
        printf("%7d%13d        ", i, n[i]);

        for (j = 1; j <= n[i]; ++j) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}
