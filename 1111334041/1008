#include <stdio.h>

int main() 
{
    int a, b, c;
    int sum, max, min;
    double avg;

    printf("請輸入三個整數：");
    scanf_s("%d %d %d", &a, &b, &c);

    sum = a + b + c;
    avg = sum / 3.0;

    // 計算最大值，只用單一條件式
    max = a;
    if (b > max)
        max = b;
    if (c > max)
        max = c;

    // 計算最小值，只用單一條件式
    min = a;
    if (b < min)
        min = b;
    if (c < min)
        min = c;

    printf("總和：%d\n", sum);
    printf("平均：%.2f\n", avg);
    printf("最大值：%d\n", max);
    printf("最小值：%d\n", min);

    return 0;
}
