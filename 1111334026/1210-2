#include <stdio.h>

int main() {
    int id[20] = { 12,13,14,15,16,17,19,21,22,23,24,26,27,28,29,31,32,33,36,37 };
    int score[20] = { 66,67,66,70,73,74,75,75,62,32,44,46,27,12,80,63,66,90,11,66 };
    int originalId[20];
    int originalScore[20];
    int n = 20;

    for (int i = 0; i < n; i++) {
        originalId[i] = id[i];
        originalScore[i] = score[i];
    }

    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (score[j] > score[j + 1]) {
                int tempScore = score[j];
                score[j] = score[j + 1];
                score[j + 1] = tempScore;

                int tempId = id[j];
                id[j] = id[j + 1];
                id[j + 1] = tempId;
            }
        }
    }

    printf("原始成績 (學號, 成績):\n");
    for (int i = 0; i < n; i++) {
        printf("%d\t%d\n", originalId[i], originalScore[i]);
    }

    printf("\n");

    printf("排序後成績 (學號, 成績):\n");
    for (int i = 0; i < n; i++) {
        printf("%d\t%d\n", id[i], score[i]);
    }

    return 0;
}
