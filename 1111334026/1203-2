#include <stdio.h>

double power(double x, int n);
double fact(int n);

int main(void)
{
    int n;
    double x;

    printf("輸入 n: ");
    scanf_s("%d", &n);

    printf("輸入 x: ");
    scanf_s("%lf", &x);

    double result = 0.0;

    for (int k = 0; k <= n; k++)
    {
        result += power(x, k) / fact(k);
    }

    printf("e^x = %lf\n", result);

    return 0;
}


double power(double x, int n)
{
    if (n <= 0)
        return 1;
    else
        return x * power(x , n - 1);
}

double fact(int n)
{
    if (n <= 0)
        return 1;
    else
        return n * fact(n - 1);
}
