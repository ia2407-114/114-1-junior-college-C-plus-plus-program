#include <stdio.h>

#define N 10

void sortArrays(int id[], int cs[], int math[], float avg[]) {
    int i, j, tempI, tempCS, tempM;
    float tempA;

    for (i = 0; i < N - 1; i++) {
        for (j = i + 1; j < N; j++) {
            if (id[i] > id[j]) {
                // swap id
                tempI = id[i];
                id[i] = id[j];
                id[j] = tempI;
                // swap cs
                tempCS = cs[i];
                cs[i] = cs[j];
                cs[j] = tempCS;
                // swap math
                tempM = math[i];
                math[i] = math[j];
                math[j] = tempM;
                // swap avg
                tempA = avg[i];
                avg[i] = avg[j];
                avg[j] = tempA;
            }
        }
    }
}

int findMode(int arr[]) {
    int i, j, maxCount = 0, mode = arr[0];

    for (i = 0; i < N; i++) {
        int count = 0;
        for (j = 0; j < N; j++) {
            if (arr[j] == arr[i])
                count++;
        }
        if (count > maxCount) {
            maxCount = count;
            mode = arr[i];
        }
    }
    return mode;
}

int main() {
    int id[N], cs[N], math[N];
    float avg[N];

    printf("請輸入 10 位學生的學號：\n");
    for (int i = 0; i < N; i++) scanf("%d", &id[i]);

    printf("請輸入計概成績：\n");
    for (int i = 0; i < N; i++) scanf("%d", &cs[i]);

    printf("請輸入數學成績：\n");
    for (int i = 0; i < N; i++) scanf("%d", &math[i]);

    for (int i = 0; i < N; i++) {
        avg[i] = (cs[i] + math[i]) / 2.0;
    }

    sortArrays(id, cs, math, avg);

    int csMode = findMode(cs);
    int mathMode = findMode(math);

    printf("\n排序後各學生資料：\n");
    printf("學號\t計概\t數學\t平均\n");
    for (int i = 0; i < N; i++) {
        printf("%d\t%d\t%d\t%.2f\n", id[i], cs[i], math[i], avg[i]);
    }

    printf("\n計概成績眾數：%d\n", csMode);
    printf("數學成績眾數：%d\n", mathMode);

    return 0;
}
