#include <stdio.h>
double pi(int n);
double circle(double a, double b);
double circle1(double a, double b);
double ball(double a, double b);
double ball1(double a, double b);
double circle11(double a, double b, double c);
double circle112(double a, double b, double c);
int main()
{
    int n ;
    double a, b;
    printf("請輸入項目總數:");
    scanf_s("%d", &n);
    printf("請輸入半徑");
    scanf_s("%lf", &a);
    printf("請輸入高度");
    scanf_s("%lf", &b);
    printf("pi:%lf\n", pi(n));
    printf("圓周長:%lf\n",circle(pi(n),a));
    printf("圓面積:%lf\n", circle1(pi(n), a));
    printf("球體積:%lf\n", ball(pi(n), a));
    printf("球表面積:%lf\n", ball1(pi(n), a));
    printf("圓柱體積:%lf\n", circle11(pi(n), a,b));
    printf("圓表面積:%lf\n", circle112(pi(n), a, b));
}

double circle(double a,double b)
{
    return a *b*2;
}

double circle1(double a, double b)
{
    return a * b *b ;
}

double ball(double a, double b)
{
    return 4.0 / 3 * a * b * b * b;
}

double ball1(double a, double b)
{
    return 4.0  * a * b * b ;
}

double circle11(double a, double b,double c)
{
    return  a * b * b * c;
}

double circle112(double a, double b, double c)
{
    return  2*a*b*b+2*a*b*c;
}





double pi(int n) {
    int i;
    double pi_approx = 0.0;
    double sign = 1.0;

    for (i = 0; i < n; i++) {
        double denominator = 2.0 * i + 1.0;
        pi_approx += sign * (4.0 / denominator);
        sign *= -1.0;
    }

    return pi_approx;
}
