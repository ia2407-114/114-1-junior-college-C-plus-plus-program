#include <stdio.h>

int main() {
    double p = 10000;
    double r = 0.05;   // 年利率 /
    double aims;    // 目標金額 /
    double deposit; // 每月定期存款金額  /
    double amount = p;   //總金額 /
    int year = 0;

         printf("請輸入每年定期存入金額：");
         scanf_s("%lf", &deposit);

         printf("請輸入存款目標金額：");
         scanf_s("%lf", &aims);

    while (amount < aims) {
        year++;
        amount = amount * (1 + r) + deposit;
        printf("第 %d 年：本利合 = %.2f\n", year, amount);
    }

    printf("共需 %d 年可達成目標。\n", year);
    return 0;
}
