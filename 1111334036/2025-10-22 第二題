#include <stdio.h>

int main()
{
	float aims, years = 0, r, add, c;
	int i;
	printf("請輸入本金\n");
	scanf_s("%f", &c);
	printf("請輸入利率\n");
	scanf_s("%f", &r);
	printf("請輸入目標金額\n");
	scanf_s("%f", &aims);
	printf("請輸入每一年底要再存多少錢進戶頭\n");
	scanf_s("%d", &add);
	while (c < aims)
	{
		years += 1;
		c = c + add;
		c = c * (1 + r);
		printf("第%.0f年存了%.1f元\n", years, c);
	}
	printf("共存了%.1f元，需要%.0f年", c, years);
}
