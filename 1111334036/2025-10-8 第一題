#include<stdio.h>

int main()
{	
	int num1, num2, num3, max, min, summary;
	float average;
	printf("請輸入第一個數 \n");
	scanf_s("%d", &num1);
	printf("請輸入第二個數 \n");
	scanf_s("%d", &num2);
	printf("請輸入第三個數 \n");	
	scanf_s("%d", &num3);
	summary = num1 + num2 + num3;
	average = summary / 3;
	max = num1;
		if (num2 > max)	max = num2;
		if (num3 > max) max = num3;
	min = num1;
		if (num2 < min) min = num2;
		if (num3 < min) min = num3;
	printf("數字和是 %d, 平均是 %f,最大值是 %d, 最小值是 %d", summary, average, max, min);
	return 0;
}
