#include <stdio.h>

double p(double x, int n) {
	if (n == 0) {
		return 1.0;
	}
	else {
		return x * p(x, n - 1);
	}
}
double f(int n) {
	if (n == 0 || n == 1) {
		return 1.0;
	}
	else {
		return n * f(n - 1);
	}
}

int main() {
	int n;
	double x;
	double result = 0.0;
	int i;
	printf("請輸入x值:\n");
	scanf_s("%lf", &x);
	printf("請輸入n值:\n");
	scanf_s("%d", &n);
	for (i = 0; i <= n; i++) {
		result += p(x, i) / f(i);
	}
	printf("e^%.2lf值為:%.6lf\n", x, result);
	return 0;
}
