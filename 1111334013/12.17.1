#include <stdio.h>
#define ROW 3
#define COL 10

void sort(int score[ROW][COL], float avg[], int n) {
    int i, j, k;
    int temp;
    float ftemp;

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            if (avg[j] > avg[j + 1]) {

                /* 交換平均成績 */
                ftemp = avg[j];
                avg[j] = avg[j + 1];
                avg[j + 1] = ftemp;

                /* 三列資料一起交換 */
                for (k = 0; k < ROW; k++) {
                    temp = score[k][j];
                    score[k][j] = score[k][j + 1];
                    score[k][j + 1] = temp;
                }
            }
        }
    }
}


float find_mid(float avg[], int n) {
    if (n % 2 == 0) {
        return (avg[n / 2 - 1] + avg[n / 2]) / 2.0;
    }
    else {
        return avg[n / 2];
    }
}

int main() {
    int score[ROW][COL] = {
        {11, 15, 13, 18, 12, 17, 14, 19, 16, 20},  // 學號
        {85, 92, 78, 85, 90, 85, 76, 95, 88, 85}, // 計概
        {70, 80, 75, 90, 85, 70, 82, 92, 88, 70}  // 數學
    };

    float avg[COL];
    int i;
    float mid;


    for (i = 0; i < COL; i++) {
        avg[i] = (score[1][i] + score[2][i]) / 2.0;
    }


    printf("排序前\n");
    printf("學號\t計概\t數學\t平均\n");
    for (i = 0; i < COL; i++) {
        printf("%d\t%d\t%d\t%.1f\n",
            score[0][i], score[1][i], score[2][i], avg[i]);
    }


    sort(score, avg, COL);
    mid = find_mid(avg, COL);

    printf("\n排序後\n");
    printf("學號\t計概\t數學\t平均\n");
    for (i = 0; i < COL; i++) {
        printf("%d\t%d\t%d\t%.1f\n",
            score[0][i], score[1][i], score[2][i], avg[i]);
    }

    printf("\n平均成績中位數：%.1f\n", mid);

    return 0;
}
