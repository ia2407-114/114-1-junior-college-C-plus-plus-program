#include<stdio.h>
double power(double x, int n) {
	if (n == 0)
		return 1;
	else
		return x * power(x, n - 1);
}

long long factorial(int n) {
	if (n == 0 || n == 1)
		return 1; //if n = 1 or 0 then 回傳 1
	else
		return n * factorial(n - 1); //不然回傳這個
}
//遞迴計算 n!

int main() {
	int n;
	double x;
	double result = 1.0;

	printf("請輸入n:");
	scanf_s("%d", &n);

	printf("請輸入x:");
	scanf_s("%lf", &x);

	for (int i = 1; i <= n; i++) {
		result += power(x, i) / factorial(i);
	}

	printf("e^x的近似值=%lf\n", result);

	return 0;
}
