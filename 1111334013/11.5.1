#include <stdio.h>
double approximate_pi(int n) { // 1. 利用級數求出 pi 的近似值
    int i;
    double pi_approx = 0.0;
    double sign = 1.0;

    for (i = 0; i < n; i++) {
        double denominator = 2.0 * i + 1.0;
        pi_approx += sign * (4.0 / denominator);
        sign *= -1.0; // 正負號交替
    }

    return pi_approx;
}

double a(double pi, double r) { // 2. 計算圓周長：C = 2 * pi * r
    return 2 * pi * r;
}

double b(double pi, double r) { // 3. 計算圓面積：A = pi * r^2
    return pi * r * r;
}

double c(double pi, double r) { // 4. 計算球體積：V = (4/3) * pi * r^3
    return (4.0 / 3.0) * pi * r * r * r;
}

double d(double pi, double r) { // 5. 計算球表面積：A = 4 * pi * r^2
    return 4 * pi * r * r;
}

double e(double pi, double r, double h) { // 6. 計算圓柱體積：V = pi * r^2 * h
    return pi * r * r * h;
}

double f(double pi, double r, double h) { // 7. 計算圓柱表面積：A = 2 * pi * r * (r + h)
    return 2 * pi * r * (r + h);
}

int main() {
    int n;
    double r, h;
    double pi_value;

    printf("請輸入計算項目總數 n：");
    scanf_s("%d", &n);

    // 呼叫 approximate_pi() 計算 pi
    pi_value = approximate_pi(n);
    printf("近似的 pi 值 = %.10f\n", pi_value);

    // 輸入半徑與高度
    printf("請輸入半徑 r：");
    scanf_s("%lf", &r);
    printf("請輸入圓柱高度 h：");
    scanf_s("%lf", &h);

    // 印出各種結果
    printf("\n--- 計算結果 ---\n");
    printf("圓周長 = %.6f\n", a(pi_value, r));
    printf("圓面積 = %.6f\n", b(pi_value, r));
    printf("球體積 = %.6f\n", c(pi_value, r));
    printf("球表面積 = %.6f\n", d(pi_value, r));
    printf("圓柱體積 = %.6f\n", e(pi_value, r, h));
    printf("圓柱表面積 = %.6f\n", f(pi_value, r, h));

    return 0;
}
