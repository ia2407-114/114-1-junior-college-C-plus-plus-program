#include <stdio.h>

int main() {
    int a, b, c;
    int sum, max, min;
    double average;

    printf("請輸入三個整數：");
    scanf("%d %d %d", &a, &b, &c);

    sum = a + b + c;
    average = sum / 3.0;

    max = a;
    if (b > max) max = b;
    if (c > max) max = c;

    min = a;
    if (b < min) min = b;
    if (c < min) min = c;

    printf("總和 = %d\n", sum);
    printf("平均值 = %.2f\n", average);
    printf("最大值 = %d\n", max);
    printf("最小值 = %d\n", min);

    return 0;
}
