#include <stdio.h>

long long factorial(int n) {
	if (n == 0 || n == 1)
		return 1;
	return n * factorial(n - 1);
}

double power(double x, int n) {
	if (n == 0)
		return 1;
	return x * power(x, n - 1);
}

int main() {
	int n;
	double x;

	printf("請輸入 n:");
	scanf_s("%d", &n);

	printf("請輸入 x: ");
	scanf_s("%1f", &x);

	double result = 1.0;

	for (int i = 1; i <= n; i++) {
		result += power(x, i) / factorial(i);
	}
	printf("e^x 的近似值 = %.10\n", result);

	return 0;
}
