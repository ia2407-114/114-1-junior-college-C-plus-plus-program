#include <stdio.h>

int main(void)
{
	double p, r, aims;
	int year = 0;

	printf("請輸入本金 p:");
	scanf_s("%lf", &p);

	printf("請輸入年利率 r :");
	scanf_s("%lf", &r);

	printf("請輸入存款目標 aims:");
	scanf_s("%lf", &aims);

	while (p < aims)
	{
		p = p * (1 + r);
		year++;
		printf("第 %d 年 : 本利合 = %.2f\n", year, p);
	}
	printf("共需 %d 年才能達成目標 \n", year);

	return 0;
}
