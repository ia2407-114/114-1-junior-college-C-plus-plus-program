#include <stdio.h>

int main() {
    int n;         
    double pi = 0; 
    double sign = 1; 

    printf("請輸入項目數量 n: ");
    scanf_s("%d", &n);

    for (int i = 0; i < n; i++) {
        int denominator = 2 * i + 1; 

        if (denominator % 2 == 0) {
            continue;
        }
        pi += sign * (4.0 / denominator);
        sign = -sign;
    }

    printf("取前 %d 項時，pi 的近似值為: %.10f\n", n, pi);

    return 0;
}
