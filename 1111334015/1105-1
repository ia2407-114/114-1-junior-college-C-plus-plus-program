#include <stdio.h>
#include <math.h>

double cal_pi(int n) {
    double pi = 0.0;
    int sign = 1; 

    for (int i = 0; i < n * 2; i++) {
        int denominator = i * 2 + 1; 
        if (denominator == 0) continue; 
        pi += sign * (4.0 / denominator);
        sign = -sign; 
    }

    return pi;
}
double circumference(double pi, double r) {
    return 2 * pi * r;
}
double circle_area(double pi, double r) {
    return pi * r * r;
}
double sphere_volume(double pi, double r) {
    return (4.0 / 3.0) * pi * pow(r, 3);
}
double sphere_area(double pi, double r) {
    return 4 * pi * r * r;
}
double cylinder_volume(double pi, double r, double h) {
    return pi * r * r * h;
}
