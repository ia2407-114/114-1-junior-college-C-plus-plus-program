#include <stdio.h>

int factorial(int x) {
    int result = 1;
    for (int i = 1; i <= x; i++) {
        result *= i;
    }
    return result;
}

int main() {
    int fact, n;
    double e = 1.0; 


    printf("請輸入一個整數 fact (<13): ");
    scanf_s("%d", &fact);

    int fact_value = factorial(fact);
    printf("%d! = %d\n", fact, fact_value);

    printf("請輸入項目數量 n (<13): ");
    scanf_s("%d", &n);

    for (int i = 1; i <= n; i++) {
        e += 1.0 / factorial(i);
    }

    printf("e 的近似值 (取前 %d 項) = %.10f\n", n, e);

    return 0;
}
