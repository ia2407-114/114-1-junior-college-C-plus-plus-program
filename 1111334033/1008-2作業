#include <stdio.h>
int main(void)
{
    float height, weight, bmi;
    printf("請輸入身高(公尺):");
    scanf_s("%f", &height);
    printf("請輸入體重(公斤):");
    scanf_s("%f", &weight);
    bmi = weight / (height * height);
    printf("bmi為%f\n", bmi);
    if (bmi < 18.5)
        printf("體重過輕\n");
    else if (bmi < 25)
        printf("正常體重\n");
    else if (bmi < 30)
        printf("過重\n");
    else if (bmi < 35)
        printf("輕度肥胖\n");
    else if (bmi < 40)
        printf("中度肥胖\n");
    else
        printf("重度肥胖\n");
    return 0;
}
