#include <stdio.h>

int main(void) {
    int n;
    double pi = 0;
    printf("請輸入項目數 n: ");
    scanf_s("%d", &n);
    for (int i = 0; i < n; i++) {
        double temp;
        temp = 4.0 / (2 * i + 1);
        if (i % 2 == 0) {  
            pi = pi + temp;
        } else {  
            pi = pi - temp;
        }
    }
    printf("pi 近似值 = %lf\n", pi);
    return 0;
}
