#include  <stdio.h>
int main()
{
	int year = 1;
	double p, r, aims,sum;
	printf("輸入本金:\n");
	scanf_s("%lf", &p);
	printf("輸入年利率:\n");
	scanf_s("%lf", &r);
	printf("輸入存款目標:\n");
	scanf_s("%lf", &aims);
	sum = 10000;
	while (p <= aims)
	{
		p = p * (1 + r);
		printf("第%d年的結存為%lf\n", year, p);
		p = p + sum;
		year++;
		
	}
	
	return 0;
}
