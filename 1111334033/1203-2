#include <stdio.h>
double fact(int n);
double num(int x, int n);

int main()
{
	int n;
	int x;
	double e = 0;

	printf("輸入一個n值:\n");
	scanf_s("%d", &n);
	printf("輸入一個x值:\n");
	scanf_s("%d", &x);
	for (int i = 0; i <= n; i++) {
		e = e + num(x,i) / fact(i);
	}
	printf("e結果是%lf\n", e);
	return 0;
}
double fact(int n) {
	if (n <= 0) {
		return 1;
	}
	else {
		return n * fact(n - 1);
	}
}
double num(int x, int n) {
	if (n <= 0) {
		return 1;
	}
	else {
		return x*num(x,n-1);
	}
}


