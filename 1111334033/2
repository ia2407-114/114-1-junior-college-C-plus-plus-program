#include <stdio.h>
void swap(int* a, int* b, float* x, float* y);
int main()
{
	int a = 1;
	int b = 2;
	float x = 3.5;
	float y = 2.5;
	printf("交換前的值a=%d b=%d x=%.1f y=%.1f\n",a, b, x, y);
	swap(&a, &b, &x, &y);
	printf("交換後的值a=%d b=%d x=%.1f y=%.1f", a, b, x, y);
}
void swap(int* a, int* b, float* x, float* y) {
	int temp;
	float temp1;

	temp = *a;
	*a = *b;
	*b = temp;

	temp1 = *x;
	*x = *y;
	*y = temp1;
}
