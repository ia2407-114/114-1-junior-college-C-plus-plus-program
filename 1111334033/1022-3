#include  <stdio.h>
int main()
{
	int year = 0;
	double p, r, aims, cost;
	printf("輸入本金:\n");
	scanf_s("%lf", &p);
	printf("輸入年利率:\n");
	scanf_s("%lf", &r);
	printf("輸入每個月底定額存入金額:\n");
	scanf_s("%lf", &cost);
	printf("輸入存款目標:\n");
	scanf_s("%lf", &aims);
	while (p <= aims)
	{
		p = (p + cost*12)*(1 + r);
		year++;
		printf("第%d年的結存為%lf\n", year, p);
	}
	printf("第%d年完成目標\n", year);
	return 0;
}
