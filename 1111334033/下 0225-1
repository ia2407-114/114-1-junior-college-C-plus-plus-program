#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main(void)
{
    FILE* cfPtr;
    if (fopen_s(&cfPtr, "clients.txt", "w") != 0) {
        puts("File could not be opened");
        return 1;
    }
    puts("Enter the id, name, math, computer.");
    puts("Input 3 students only.\n");

    unsigned int id;
    char name[30];
    int math, computer;
    double avg;

    for (int i = 0; i < 3; i++) {
        printf("Student %d: ", i + 1);
        scanf_s("%u %29s %d %d",&id, name, sizeof(name), &math, &computer);
        avg = ((double)math + computer) / 2;
        fprintf(cfPtr, "%u %s %d %d %.2lf\n",id, name, math, computer, avg);
    }
    fclose(cfPtr);
    puts("\nData written to clients.txt successfully.");
    return 0;
}
