#include <stdio.h>

int main() {
    
        int i = 0,money;
        double p, r, aims;

        printf("你的本金? ");
        scanf_s("%lf", &p);
        printf("你的利率? ");
        scanf_s("%lf", &r);
        printf_s("你每年底定期存入的金額? ");
        scanf_s("%d", &money);
        printf("你的存款目標是多少? ");
        scanf_s("%lf", &aims);

        while (p < aims) {  // 本金未達目標時持續計算，不符合停止
            p = p * (1 + r)+money;
            i = i + 1;
            printf("第 %d 年的本利合為 %lf\n", i, p);
        }

        printf("第 %d 年才能達成目標\n", i);

        return 0;
    }
