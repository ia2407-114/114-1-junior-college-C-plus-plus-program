#include <stdio.h>
#include <string.h>
#define SIZE 10

struct student {
    char name[20];
    int id, computer, math;
    float avg;
};


void sort_array(struct student stu[SIZE], int n) {
    int i, j;
    struct student temp;

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            if (stu[j].avg < stu[j+1].avg) {
                temp = stu[j];
                stu[j] = stu[j + 1];
                stu[j + 1] = temp;
                

            }
        }
    }
}

int main() {
    struct student stu1, * stu2;
    struct student stu[SIZE] = { {"Danny",11,85,70 },
                                 {"Mary",15,92,80 } ,
                                 {"Jimmy",13,78,75 } ,
                                 {"Peter",18,85,90 },
                                 {"Sue",12,90,85 },
                                 {"John",17,85,70},
                                 {"Hearts",14,76,82 } ,
                                 {"Diamonds",19,95,92 },
                                 {"Clubs",16,88,88 } ,
                                 {"Spades",20,85,70 } };


 int i ;
    
    printf("排序前：\n");
    printf("姓名\t學號\t計概成績\t數學成績\t平均成績\n");
    for (i = 0; i < SIZE; i++) {
        stu[i].avg = (stu[i].computer + stu[i].math) / 2.0;
    }
    for (i = 0; i < SIZE; i++) {
        printf("%s\t%d\t    %d\t\t    %d\t\t    %f\t\n", stu[i].name, stu[i].id, stu[i].computer, stu[i].math, stu[i].avg);
    }


    sort_array(stu, SIZE);

    printf("\n排序後（依平均成績）：\n");
    printf("姓名\t學號\t計概成績\t數學成績\t平均成績\n");

    for (i = 0; i < SIZE; i++) {
        printf("%s\t%d\t    %d\t\t    %d\t\t    %f\t\n", stu[i].name, stu[i].id, stu[i].computer, stu[i].math, stu[i].avg);
    }


    return 0;
}
