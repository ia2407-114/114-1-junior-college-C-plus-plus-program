/*/*題目2. 承上題 加入一個二元搜尋的副程式，
由主程式輸入欲搜尋的學號，再呼叫該副程式找出該筆資料的內容，
包括姓名、學號、計算機概論、數學、平均成績，需使用副程式與傳位址呼叫進行結構陣列傳遞。*/



#include <stdio.h>
#include <string.h>
#define SIZE 10

struct student {
    char name[20];
    int id, computer, math;
    float avg;
};


void sort_array(struct student stu[SIZE], int n) {
    int i, j;
    struct student temp;

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            if (stu[j].avg < stu[j + 1].avg) {
                temp = stu[j];
                stu[j] = stu[j + 1];
                stu[j + 1] = temp;


            }
        }
    }
}
int binarySearch(struct student stu[SIZE], int searchKey, int low, int high)  //二元搜尋法並須是在已經排序好的數列上找出你要的數
{

    while (low <= high) {

        int middle = (low + high) / 2;


        if (searchKey == stu[middle].id) {  
            return middle;
        }


        else if (searchKey < stu[middle].id) {
            high = middle - 1; 
        }

        // 
        else {
            low = middle + 1;
        }
    }

    return -1; 
}



int main() {
    struct student stu1, * stu2;
    struct student stu[SIZE] = { {"Danny",11,85,70 },
                                 {"Mary",12,92,80 } ,
                                 {"Jimmy",13,78,75 } ,
                                 {"Peter",14,85,90 },
                                 {"Sue",15,90,85 },
                                 {"John",16,85,70},
                                 {"Hearts",17,76,82 } ,
                                 {"Diamonds",18,95,92 },
                                 {"Clubs",19,88,88 } ,
                                 {"Spades",20,85,70 } };




    int i, key, result;
    int low = 0;
    printf("請輸入你要找的學號鍵值:");
    scanf_s("%d", &key);
    result = binarySearch(stu, key, 0, SIZE - 1);
    if (result == -1) {
        printf("找不到資料\n");
    }
    else { 
        printf("這位學號是%d的同學的名字%s,%d,%d,%f\n", key, stu[result].name, stu[result].computer, stu[result].math, (stu[result].computer + stu[result].math) / 2.);
    }
    printf("排序前：\n");
    printf("姓名\t學號\t計概成績\t數學成績\t平均成績\n");
    for (i = 0; i < SIZE; i++) {
        stu[i].avg = (stu[i].computer + stu[i].math) / 2.0;
    }
    for (i = 0; i < SIZE; i++) {
        printf("%s\t%d\t    %d\t\t    %d\t\t    %f\t\n", stu[i].name, stu[i].id, stu[i].computer, stu[i].math, stu[i].avg);
    }


    sort_array(stu, SIZE);

    printf("\n排序後（依平均成績）：\n");
    printf("姓名\t學號\t計概成績\t數學成績\t平均成績\n");

    for (i = 0; i < SIZE; i++) {
        printf("%s\t%d\t    %d\t\t    %d\t\t    %f\t\n", stu[i].name, stu[i].id, stu[i].computer, stu[i].math, stu[i].avg);
    }


    return 0;
}
